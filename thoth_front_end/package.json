{
  "name": "thoth",
  "version": "1.0.0",
  "main": "main.mjs",
  "scripts": {
    "run": "electron .",
    "rundev": "electron --inspect .",
    "mkdocs": "node make_ollama_docs.mjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "make-windows": "electron-builder --windows=nsis",
    "make-macos": "electron-builder --mac=dmg",
    "make-linux": "electron-builder --linux=AppImage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^13.0.1",
    "marked-highlight": "^2.1.3",
    "ollama": "^0.5.2",
    "sharp": "^0.33.4",
    "yauzl": "^3.1.3"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "http-server": "^14.1.1"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "asarUnpack": ["ollama.json"],
    "extraResources": [
      {
        "from": "../thoth_back_end/",
        "to": "thoth_back_end",
        "filter": [
          "dist/**",
          "src/**",
          "requirements.txt",
          ".venv/**"
        ]
      }
    ]
  }
}
